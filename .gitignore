#Задача 1.

df <- diamonds

m1 <- mean(df$price)
m2 <- mean(df$carat)
df$factor_price <- ifelse (df$price >= m1,1,0)
df$factor_carat <- ifelse (df$carat >= m2,1,0)
main_stat <- chisq.test(df$factor_price,df$factor_carat)
main_stat <- main_stat$statistic


